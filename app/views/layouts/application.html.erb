<!DOCTYPE html>
<html>
  <head>
    <title>BrunchReviews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to "Sign Out", sign_out_path, method: :delete %>
    <% end %>
    <% flash.each do |name, msg| %>
      <div class="<%= name %>">
        <%= content_tag :span, msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
